            <!--android:paddingTop="5dp"-->
            <!--android:text="HILIH"-->
            <!--android:textSize="12sp" />-->

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="30dp"
            android:background="@color/placeholder_bg" />
    </LinearLayout>

</LinearLayout>